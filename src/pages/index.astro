---
import Layout from '@/layouts/Layout.astro'
import { Image } from 'astro:assets'
import homeImage from '@/assets/images/blast.jpg'
import site from '@/data/site'
---

<Layout seo={{ title: 'Home' }}>
	<p class="text-xl">
		{site.description}
	</p>
	<div class="mt-16">
		<Image
			alt="Image for homepage"
			src={homeImage}
			class="my-4 aspect-video w-full rounded object-cover"
			width="720"
			transition:name={`image-home`}
		/>
		<p>
			Veniam Lorem est dolor consectetur aliquip veniam deserunt laborum irure officia.
			Pariatur cillum cupidatat non consequat labore aute aute sunt culpa adipisicing. Dolore
			et est fugiat id eu.
		</p>
	</div>
</Layout>
