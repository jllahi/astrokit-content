---
import site from '@/data/site.json'
// import Navigation from '@/components/Navigation.astro'
import ResponsiveMenu from '../header/ResponsiveMenu.astro'
---

<header class:list={['flex w-full flex-row justify-between', 'mb-1 sm:mb-4']}>
	<a href="/" class="z-40">
		<h2
			class:list={[
				'border-color-black font-logo dark:border-color-white border-2 px-4 py-2 text-2xl font-black uppercase no-underline',
				'transition-all duration-300 ease-out',
				'text-color-black dark:text-color-white',
				'hover:bg-color-black hover:text-color-white',
				'dark:hover:bg-color-white dark:hover:text-color-black'
			]}
		>
			{site.title}
		</h2>
	</a>
	<ResponsiveMenu />
</header>
