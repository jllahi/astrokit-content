---
// https://docs.astro.build/en/core-concepts/routing/#pagination
// https://docs.astro.build/en/reference/api-reference/#paginate

import type { Page } from 'astro'
import type { CollectionEntry } from 'astro:content'
import Link from '@/components/ui/Link.astro'

interface Props {
	page: Page<CollectionEntry<'posts'>>
}

const { page } = Astro.props
---

<div class="my-10 flex w-full flex-row justify-between">
	{
		page.url.prev && (
			<div class:list={['p-8', 'hover:bg-font-color hover:text-background-color']}>
				<Link href={page.url.prev} rel="prev">
					&lt; Previous
				</Link>
			</div>
		)
	}
	<div>
		<!-- {page.currentPage} -->
	</div>
	{
		page.url.next && (
			<div class="p-8">
				<Link href={page.url.next} rel="next">
					Next &gt;
				</Link>
			</div>
		)
	}
</div>
