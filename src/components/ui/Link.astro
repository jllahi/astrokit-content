---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
	block?: boolean
	class?: string
	size?: 'md' | 'lg'
	style?: 'outline' | 'primary' | 'inverted'
}

const sizes = {
	md: 'pb-1 px-2',
	lg: 'py-2 px-3',
}

const styles = {
	outline: 'border-2 border-black hover:bg-black text-black hover:text-white',
	primary:
		'bg-background-color text-font-color hover:bg-font-color hover:text-background-color',
	inverted:
		'bg-font-color text-background-color hover:bg-background-color hover:text-font-color',
}

const {
	size = 'md',
	style = 'primary',
	block,
	class: className,
	...rest
} = Astro.props
---

<a
	class:list={[
		'rounded place-content-center',
		block && 'w-full',
		sizes[size],
		styles[style],
		className,
	]}
	{...rest}
>
	<slot />
</a>
